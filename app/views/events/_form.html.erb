
<div class="container mt-5">
  <div class="row">
    <div class="col-lg-4 col-xl-5 col-md-7 col-sm-9 col-12 shadow border-rounded pt-3 mx-auto ">
      <h2 class="text-center"> <%= form_heading %></h2>
      <%= simple_form_for(event, as: 'event', method: :post, url: events_path) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :title,
            required: true,
            autofocus: true,
            input_html: { autocomplete: "Title" }%>
          <%= f.input :description,
            required: true,
            autofocus: true,
            input_html: { autocomplete: "Description" }%>

          <%= f.input :start, label: 'Start Date:',
placeholder: 'i.e 20-5-2020',
            as: :string, start_year: Time.now.year - 90, end_year: Time.now.year - 8, order: [:day, :month, :year]%>
          <%= f.input :end, label: 'End Date:', as: :string, start_year: Time.now.year - 90, end_year: Time.now.year - 8, order: [:day, :month, :year]%>
        </div>

        <div class="form-actions">
          <%= f.button :submit,  form_submit, class: 'btn btn-info' %>
        </div>
      <% end %>

    </div>
  </div>
</div>
