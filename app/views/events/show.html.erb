

<div class="container">
  <h2 class="text-center text-bolder">Upcoming @events</h2>
  <div class="row">
    <ul class="col-xl-7 col-lg-6 col-md-8 col-sm-10 col-sm-12 mr-auto">
        <li class="shadow py-2 my-2">
            <div class="d-flex flex-column ml-3">
              <h4 class="text-uppercase"><%= @event.title%></h4>
              <p><%= @event.description%></p>
            </div>
            <div class=" ml-2 d-flex flex-column ">
              <strong>Start: <%= @event.start%></strong>
              <strong>End: <%= @event.end%></strong>
            </div>
          </li>
    </ul>
  </div>
</div>
